package company;

import java.util.Scanner;

public class Pgm1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner jj = new Scanner(System.in);
		System.out.println("enter a operator");
		char operator = jj.next().charAt(0);
		System.out.println("enter a digit");
		double num1 = jj.nextDouble();
		double num2 = jj.nextDouble();
		switch (operator) {
		case '+':
			System.out.println("addition of number ="+(num1+num2) );break;
		case '-':
			System.out.println("substraction of number ="+(num1-num2) );break;
		case '*':
			System.out.println("multiplication of number ="+(num1*num2) );break;
		case '/':
			System.out.println("division of number ="+(num1/num2) );break;
		default:
			System.out.println("entere oprrator is invalid");
		}

	}
}
